package com.ngc.seaside.systemdescriptor.deployment.zeromq

import com.ngc.seaside.systemdescriptor.deployment.zeromq.ZeroMqConfigurationBase

data ZeroMqIpcTransportConfiguration extends ZeroMqConfigurationBase {
	metadata {
		"description" : "Defines the configuration for a link that should use ZeroMQ's inter-process transport mechanism.",
		"target": "link"
	}

	string path {
		metadata {
			"description": "The file path to use for the buffer.  This value should be an absolute file path and it should not begin with 'ipc://'.",
			"validation": {
				"regex": "^(/[^/]+)+"
			},
			"environment": {
				"operatingSystems": ["Linux"]
			}
		}
	}
}
