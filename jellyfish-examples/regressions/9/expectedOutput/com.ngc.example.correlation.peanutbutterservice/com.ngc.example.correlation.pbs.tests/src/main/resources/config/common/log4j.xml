<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

   <appender name="console" class="org.apache.log4j.ConsoleAppender">
      <param name="Threshold" value="TRACE" />
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern"
                value="%d{yyyy-MM-dd HH:mm:ss} [model:com.ngc.example.correlation.PeanutButterService] %-3p %c{1}:%L - %m%n"/>
      </layout>
   </appender>

   <appender name="file" class="org.apache.log4j.RollingFileAppender">
      <param name="append" value="false" />
      <param name="maxFileSize" value="10MB" />
      <param name="maxBackupIndex" value="10" />
      <param name="Threshold" value="TRACE" />
      <param name="file" value="build/logs/engagement_track_priority_service.log" />
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern"
                value="%d{yyyy-MM-dd HH:mm:ss} [model:com.ngc.example.correlation.PeanutButterService] %-3p %c{1}:%L - %m%n" />
      </layout>
   </appender>

   <logger name="org.apache.commons.beanutils.converters">
      <level value="WARN"/>
   </logger>

   <root>
      <level value="TRACE" />
      <appender-ref ref="console" />
      <appender-ref ref="file" />
   </root>

</log4j:configuration>
