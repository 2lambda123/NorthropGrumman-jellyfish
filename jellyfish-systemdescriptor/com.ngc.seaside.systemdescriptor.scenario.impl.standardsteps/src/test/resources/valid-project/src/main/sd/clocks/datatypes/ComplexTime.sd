package clocks.datatypes

import clocks.datatypes.TimeZone

data ComplexTime {
  metadata {
    "name": "ComplexTime",
    "description": "Represents a local time (does not account for timezones)."
  }

  int hour {
    "validation": {
      "min": 0,
      "max": 23
    }
  }

  int minute {
    "validation": {
      "min": 0,
      "max": 60
    }
  }

  int second {
    "validation": {
      "min": 0,
      "max": 60
    }
  }

  TimeZone timeZone
}
