package clocks.datatypes

data Time {
  metadata {
    "name": "Time",
    "description": "Represents a local time (does not account for timezones)."
  }

  int hour {
    metadata {
      "validation": {
        "min": 0,
        "max": 23
      }
    }
  }

  int minute {
    metadata {
      "validation": {
        "min": 0,
        "max": 60
      }
    }
  }

  int second {
    metadata {
      "validation": {
        "min": 0,
        "max": 60
      }
    }
  }
}
