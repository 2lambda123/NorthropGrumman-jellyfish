package clocks.datatypes

data Time {
  metadata {
    "name": "Time",
    "description": "Represents a local time (does not account for timezones)."
  }

  int hour {
    "validation": {
      "min": 0,
      "max": 23
    }
  }

  int minute {
    "validation": {
      "min": 0,
      "max": 60
    }
  }

  int second {
    "validation": {
      "min": 0,
      "max": 60
    }
  }
}
