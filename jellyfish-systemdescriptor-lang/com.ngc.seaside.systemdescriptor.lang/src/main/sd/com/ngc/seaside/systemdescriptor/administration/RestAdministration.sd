package com.ngc.seaside.systemdescriptor.administration

import com.ngc.seaside.systemdescriptor.deployment.rest.RestConfiguration
import com.ngc.seaside.systemdescriptor.administration.Administration

data RestAdministration extends Administration {
	metadata {
		"description" : "Allows for the declaration of administration features that are exposed as REST endpoints.",
		"target": "model"
	}
	
	RestConfiguration shutdown {
		metadata {
			"description": "Configure the details for shutting down the service over REST."
		}
	}

	RestConfiguration restart {
		metadata {
			"description": "Configure the details for restarting the service over REST."
		}
	}
}
