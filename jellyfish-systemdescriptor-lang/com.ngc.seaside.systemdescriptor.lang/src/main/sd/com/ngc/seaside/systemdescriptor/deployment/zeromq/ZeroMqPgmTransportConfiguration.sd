package com.ngc.seaside.systemdescriptor.deployment.zeromq

import com.ngc.seaside.systemdescriptor.deployment.NetworkInterface
import com.ngc.seaside.systemdescriptor.deployment.zeromq.ZeroMqConfigurationBase

data ZeroMqPgmTransportConfiguration extends ZeroMqConfigurationBase {
	metadata {
		"description" : "Defines the configuration for a link that should use ZeroMQ's PGM transport mechanism.  This is a reliable protocol which uses UDP.  In most cases, EPGM should be preferred.",
		"target": "link"
	}

	string groupAddress {
		metadata {
			"description": "An IPv4 or IPv6 formatted multicast group address that should be used to implement the link.  This should not be a DNS address or hostname."
		}
	}
	
	int port {
		metadata {
			"description": "A port number.",
			"validation": {
				"min": 0,
				"max": 65535
			}
		}
	}
	
	NetworkInterface sourceInterface {
		metadata {
			"description": "The network interface of the source of the link to use for the connection."
		}
	}
	
	NetworkInterface targetInterface {
		metadata {
			"description": "The network interface of the target of the link to use for the connection."
		}
	}
}
